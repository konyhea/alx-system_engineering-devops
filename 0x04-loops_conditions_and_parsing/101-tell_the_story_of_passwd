#!/usr/bin/env bash
# Set the filename
FILENAME="/etc/passwd"

# Read the file line by line and extract relevant fields
while IFS=: read -r username password userid groupid  homedir shell; do
    echo "In the secret underground city of Unixtopia, the user $username is a trusted member of the '$groupid' gang."
    echo "They reside in the mysterious $homedir district and ride their trusty $shell through the digital alleys."
    echo "${username}'s place is protected by the formidable passcode '$password'."
    echo "More information about this enigmatic user: USER ID $userid INFO"
    echo  # Add a blank line for readability
done < "$FILENAME"